<!DOCTYPE html>
<html lang="<%= props.siteInfo.lang %> ">

<head>
    <meta charSet="UTF-8" />
    <meta httpEquiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta httpEquiv="X-UA-Compatible" content="IE=Edge" />
    <meta name="viewport"
        content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />

    <title>
        <%= props.siteInfo.siteName %>
    </title>
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
  <%- include("./components/header.ejs") %>

    <div class="cont">
        <div class="row">
            <div class="col-3">
                <%- include("components/navigationBar") %>
            </div>
            <div class="col-9">
                <ul>
                    <!--                lopp show all cate -->
                    <% props.categories.forEach((category, index)=> { %>
                        <% sub=props.categories.filter(cate=> {
                            return ((cate.parent==category._id.toString())&&(cate.type==="sub" ))
                            })%>
                        <% if(category.type==="category" ){%>
                            <li value="<%=category._id%>">
                                <%=category.name%>
                            </li>
                           
                                <% if(sub.length!==0) {%>
                                    <ul style="margin-left: 8px;" label="<%= category.name %>">
                                        <% sub.forEach((subcate, index)=>{%>
                                            <li value="<%=subcate._id%>">
                                                <%= subcate.name%>
                                            </li>
                                            <%}) %>
                                    </ul>
                                    <% } %>
                                        </li>
                                        <% } %>
                                            <% }) %>
                </ul>

            </div>
        </div>
    </div>

</body>

</html>
